---
import { fade } from "astro:transitions";
import { Image } from "astro:assets";
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("photography")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
// should be: Record<string, () => Promise<{default: ImageMetadata}>>
// instead: Record<string, () => Promise<unknown>>
// @ts-ignore don't know if this is a bug or not
const images: Record<string, () => Promise<{ default: ImageMetadata }>> =
  import.meta.glob("/src/assets/photography/*.{jpeg,jpg,png,gif}");
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main transition:animate={fade({ duration: "0.2s" })}>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <div class="flex my-4 group">
                  <a href={`/photography/${post.slug}/`} class="w-96">
                    <Image
                      class="rounded-none w-80 mx-auto group-hover:w-96 transition-all duration-300 ease-in-out"
                      src={images[
                        `/src/assets/photography/${post.data.heroImage}`
                      ]()}
                      alt={post.data.title}
                      loading="eager"
                      style={{
                        filter: "none",
                      }}
                      transition:name={`cover-${post.data.title}`}
                    />
                  </a>
                  <div class="grow" />
                  <div class="flex flex-col gap-3 mt-5">
                    <h3 class="text-3xl text-right">{post.data.title}</h3>
                    <p>{post.data.description}</p>
                    <p class="text-right text-[color:var(--secondary-color)] group-hover:block hidden transition-all">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </div>
                </div>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
