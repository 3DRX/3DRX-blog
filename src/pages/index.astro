---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={SITE_TITLE} />
		<main>
			<h2>👋 Hello!</h1>
			<p>
                I'm 3DRX, a random dude on the internet.
			</p>
            <p>
                欢迎来到我的小窝
            </p>
		</main>
        <a>
            This blog is powered by <a href="https://astro.build/" target="_blank">Astro.js</a>.
        </a>
		<Footer />
	</body>
</html>
<style>
    @import url('https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300;500;700&display=swap');
    h2 {
		margin: 0.5em 0;
        font-family: "M PLUS Rounded 1c", Verdana, sans-serif;
    }
</style>
