---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeIcon from "./ThemeIcon.astro";
---

<div class="header-container">
  <header>
    <h1>
      {SITE_TITLE}
    </h1>
    <nav>
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/photography">Photography</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink
        href="https://www.youtube.com/channel/UC0b6UcWbLfDpmV6XB4_amJQ"
        target="_blank"
      >
        YouTube
      </HeaderLink>
      <HeaderLink href="https://www.instagram.com/_andy_kang/" target="_blank">
        Instagram
      </HeaderLink>
      <HeaderLink href="https://github.com/3DRX/" target="_blank">
        GitHub
      </HeaderLink>
    </nav>
  </header>
  <ThemeIcon id="light" />
</div>
<style>
  @import url("https://fonts.googleapis.com/css2?family=M+PLUS+Rounded+1c:wght@300;500;700&display=swap");
  header {
    margin: 0em 0 2em;
  }
  h1 {
    margin: 0.5em 0;
  }
  img {
    height: 1.5em;
    border-radius: 2px;
    margin-bottom: -4px;
  }
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: "M PLUS Rounded 1c", Verdana, sans-serif;
  }
</style>
